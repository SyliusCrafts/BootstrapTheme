<ul class="nav navbar">

{% if currencies|length > 1 %}
    <li class="nav-item dropdown" id="sylius-currency-selector" {{ sylius_test_html_attribute('currency-selector') }}>
        <a class="btn btn-dark text-muted nav-link dropdown-toggle sylius-active-currency" type="button" data-toggle="dropdown" {{ sylius_test_html_attribute('active-currency') }}>
            {{ active }}
        </a>
        <div class="dropdown-menu">
            {% for code in currencies %}
                {% if code is not same as(active) %}
                    <a class="dropdown-item sylius-available-currency" href="{{ path('sylius_shop_switch_currency', {'code': code}) }}" {{ sylius_test_html_attribute('available-currency') }}>
                        {{ code }}
                    </a>
                {% endif %}
            {% endfor %}
        </div>
    </li>
{% endif %}
</ul>
