<div id="sylius-carousel" class="carousel slide my-5" data-ride="carousel">
    <div class="carousel-inner">
        {% for product in products %}
            {% if loop.index0 % 2 == 0 %}
            <div class="carousel-item {% if loop.index0 == 0 %}active{% endif %}">
                <div class="row">
            {% endif %}
                    <div class="col-6">
                        {% include '@SyliusShop/Product/_box.html.twig' %}
                    </div>
            {% if loop.index % 2 == 0 or loop.last %}
                </div>
            </div>
            {% endif %}
        {% endfor %}
    </div>

    <div class="carousel-nav">
        <a class="carousel-control-prev" href="#sylius-carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#sylius-carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
